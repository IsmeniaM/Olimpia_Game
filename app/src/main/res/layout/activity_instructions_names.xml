<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".InstructionsActivityNames">

    <TextView
        android:id="@+id/instruction_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="INSTRUCTIONS"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/image_instructions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/explanitation_names"
        android:layout_width="333dp"
        android:layout_height="106dp"
        android:layout_marginTop="48dp"
        android:text="In this Category you have to choose YES or NO for the right Celebrity Name."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_instructions" />

    <ImageView
        android:id="@+id/image_instructions"
        android:layout_width="253dp"
        android:layout_height="250dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/explanitation_names"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/idea" />

    <Button
        android:id="@+id/button_play_names"
        android:layout_width="83dp"
        android:layout_height="79dp"
        android:text="PLAY"
        android:background="@color/purple_200"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/explanitation_names" />

</androidx.constraintlayout.widget.ConstraintLayout>