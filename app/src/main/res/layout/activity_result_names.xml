<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ResultActivityNames">

    <TextView
        android:id="@+id/tv_result_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="RESULT"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/names_trophy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="imageTrophyNames"
        android:src="@drawable/trophy" />

    <TextView
        android:id="@+id/tv_congratulation_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="YOUR SCORE IS"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_score_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/secondary_text_dark"
        android:textSize="20sp"
        tools:text="Your Score is 9 out of 10" />

    <Button
        android:id="@+id/btn_register_score_names"
        android:layout_width="275dp"
        android:layout_height="79dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/teal_200"
        android:clickable="true"
        android:text="Register my score"
        android:textSize="20dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnNames_finish"
        android:layout_width="198dp"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#CE1B1B"
        android:text="FINISH"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>